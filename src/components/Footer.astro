<style>
.site-footer {
  margin-top:3.5rem;
  padding:2.2rem 1rem 3.2rem;
  text-align:center;
  font-size:.7rem;
  line-height:1.3;
  position:relative;
  background:
     linear-gradient(
       135deg,
       rgba(var(--color-accent-rgb,79,70,229),0.08),
       rgba(255,255,255,0)
     );
  border-top:1px solid var(--color-border);
  backdrop-filter:blur(14px) saturate(1.25);
  -webkit-backdrop-filter:blur(14px) saturate(1.25);
  color:var(--color-text-dim);
  transition:background .35s ease, color var(--transition), border-color var(--transition);
}
:root[data-theme='light'] .site-footer {
  background:
    linear-gradient(
      135deg,
      rgba(var(--color-accent-rgb,79,70,229),0.10),
      rgba(255,255,255,0.65)
    );
}

.inner {
  max-width:960px;
  margin:0 auto;
  display:flex;
  flex-direction:column;
  gap:1.25rem;
  align-items:center;
}

.brand {
  margin:0;
  font-size:.75rem;
  letter-spacing:.55px;
  font-weight:500;
  color:var(--color-text-dim);
}
.brand strong {
  color:var(--color-text);
  font-weight:600;
}

.social {
  --size:42px;
  margin:0;
  padding:0;
  list-style:none;
  display:flex;
  gap:.75rem;
  flex-wrap:wrap;
  justify-content:center;
}

.social a {
  display:flex;
  align-items:center;
  justify-content:center;
  width:var(--size);
  height:var(--size);
  border-radius:14px;
  background:rgba(255,255,255,0.05);
  border:1px solid var(--color-border);
  color:var(--color-text-dim);
  text-decoration:none;
  transition:background var(--transition), color var(--transition), border-color var(--transition), transform var(--transition), box-shadow var(--transition);
  backdrop-filter:blur(8px);
}
:root[data-theme='light'] .social a {
  background:rgba(255,255,255,0.55);
}

.social a:hover,
.social a:focus-visible {
  color:var(--color-accent);
  border-color:var(--color-accent);
  background:rgba(var(--color-accent-rgb,79,70,229),0.12);
  transform:translateY(-2px);
  box-shadow:0 6px 18px -6px rgba(0,0,0,.45);
  outline:none;
}

.social svg {
  width:20px;
  height:20px;
  display:block;
}

@media (max-width:600px){
  .site-footer { padding:2.4rem .9rem 2.9rem; }
  .social { --size:40px; gap:.55rem; }
}

@media (prefers-reduced-motion:reduce){
  .social a,
  .social a:hover,
  .social a:focus-visible {
    transition:none;
    transform:none;
  }
}
</style>
